{
    "name": "codexsoft/operations",
    "license": "MIT",
    "description": "A tool provides building blocks for structuring domain business-logic via operations",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "codexsoft/code": "dev-master",
        "symfony/filesystem": "~3.4|~4.0|~5.0",
        "ramsey/uuid": "^3.8",
        "symfony/event-dispatcher": "^4.1|~5.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "": ["src/", "vendor/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": ["tests/unit/"]
        }
    },
    "bin": [
        "bin/codexsoft.operations"
    ]
}
